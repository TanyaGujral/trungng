<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
  <LinearLayout
  	android:id="@+id/layout_group_main"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_weight="1"
  >
  	<!--  left panel: list of groups -->
  	<LinearLayout
  		android:layout_width="100dp"
  		android:layout_height="fill_parent"
  		android:orientation="vertical"
  	>
  		<TextView
  			android:id="@+id/txt_group_add"
  			android:text="+"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:padding="4dp"
  			android:textAppearance="?android:attr/textAppearanceLarge"
  			android:textColor="@color/white"
  			android:gravity="center"
  			android:background="@drawable/group_item_bg"
  		/>
		  <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
				android:background="@drawable/divider_horizontal_dark"
			/>	
  		<TextView
  			android:id="@+id/txt_group_all"
  			android:text="@string/btn_group_all"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:padding="4dp"
  			android:textAppearance="?android:attr/textAppearanceLarge"
  			android:textColor="@color/white"
  			android:gravity="center"
  			android:background="@drawable/group_item_bg"
  		/>
		  <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
				android:background="@drawable/divider_horizontal_dark"
		  />
  		<TextView
  			android:id="@+id/txt_group_none"
  			android:text="@string/btn_group_none"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:padding="4dp"
  			android:textAppearance="?android:attr/textAppearanceLarge"
  			android:textColor="@color/white"
  			android:gravity="center"
  			android:background="@drawable/group_item_bg"
  		/>
		  <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
				android:background="@drawable/divider_horizontal_dark"
		  />
	  	<ListView
	  		android:id="@+id/list_groups"
	  		android:layout_width="fill_parent"
	  		android:layout_height="fill_parent"
	  	/>
  	</LinearLayout>
  	
  	<!--  right panel: list of all contacts -->
	  <ListView
	  	android:id="@+id/list_group_contacts"
	  	android:dividerHeight="1dp"
	  	android:layout_width="wrap_content"
	  	android:layout_height="fill_parent"
	  	android:layout_weight="1"
	  />  
  </LinearLayout>
</LinearLayout>